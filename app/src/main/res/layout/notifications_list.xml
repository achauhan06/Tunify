<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#E4DFEA"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginVertical="5dp" />
        <TextView
            android:id="@+id/notificationBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="body"
            android:layout_below="@+id/notificationTitle"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp" />

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationBody"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:text="Accept"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/decline_button"
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/notificationBody"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:visibility="invisible"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/notification_request_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationBody"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:text="you have accepted/declined"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/notification_library_button"
            android:text="LIBRARY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/accept_button"
            android:layout_below="@+id/notificationBody"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:visibility="invisible"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>