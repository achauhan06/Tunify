<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/show_jam_name"
        android:layout_alignParentLeft="true"
        android:text="friend A:"
        android:textSize="20sp"
        android:scaleType="centerInside"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/show_jam_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_jam_name"
        android:text="time"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/show_jam_message"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_below="@id/show_jam_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SongName"/>

    <ImageButton
        android:id="@+id/jam_play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_play_pause"
        />
</RelativeLayout>