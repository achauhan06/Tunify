<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    android:background="#E4DFEA"
    app:cardCornerRadius="5dp">

    <TextView
        android:id="@+id/blog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/blog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_name"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:text="Time" />

    <ImageButton
        android:id="@+id/blog_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#E4DFEA"
        android:src="@drawable/baseline_remove_red_eye_black_24dp" />

</RelativeLayout>